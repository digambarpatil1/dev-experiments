{
  
  "log_file": "logs/sensor.log",
  "sensors": [
    { "type": "LinGateway",
      "channel": "sim",
      "baudrate": 19200,
      "schedule": [
        { "id": 16, "period_ms": 1000 },
        { "id": 17, "period_ms": 2000 }
      ],
      "signals": [
        { "frame_id": 16, "name": "temperature",   "byte": 0, "len": 1, "type": "u8","publish": false },
        { "frame_id": 16, "name": "humidity", "byte": 1, "len": 1, "type": "u8","publish": true },
        { "frame_id": 17, "name": "seat.heater_on",   "byte": 0, "len": 1, "type": "bool","publish": true }
      ],
      "_disabled": false
    },
    { "type": "DHT22Sensor", "interval_ms": 2000 ,"_disabled": true },
    { "type": "PIRsensor", "interval_ms": 1000 ,"_disabled": true }
  ],
  "plugins": [
    { "type": "LoggingPlugin", "_disabled": false },
    { "type": "FileSinkPlugin", "path": "logs/sensor_data_local.txt" ,"_disabled": true }
  ],
  
  "adapters": [
    { "type": "MQTTAdapter", "broker": "ssl://localhost:8883", "topic": "lin/#" ,"_disabled": false },
    { "type": "HTTPAdapter", "endpoint": "http://localhost:8080/data", "_disabled": true }
  ],
  "certificates": [
    {
      "type": "CA",
      "keyFile": "/etc/mosquitto/certs/ca.key",
      "certFile": "/etc/mosquitto/certs/ca.pem",
      "commonName": "MyCA",
      "bits": 4096,
      "days": 3650
    },
    {
      "type": "Server",
      "keyFile": "/etc/mosquitto/certs/server.key",
      "certFile": "/etc/mosquitto/certs/server.crt",
      "commonName": "localhost",
      "bits": 4096,
      "days": 3650,
      "san": ["DNS:localhost", "IP:127.0.0.1"]
    },
    {
      "type": "Client",
      "keyFile": "/etc/mosquitto/certs/client.key",
      "certFile": "/etc/mosquitto/certs/client.crt",
      "commonName": "myuser",
      "bits": 4096,
      "days": 3650,
      "san" : ["DNS:client", "IP:127.0.0.1"]
    }
  ]
}

  