{
  "plugins": [
    {
      "type": "LinGatewayPlugin",
      "path": "plugins/LinGatewayPlugin/libLinGatewayPlugin.so",
      "config": {
        "poll_interval_ms": 1000,
        "schedule": [
          { "id": 16, "period_ms": 3000 },
          { "id": 17, "period_ms": 3000 }
        ],
        "signals": [
          { "frame_id": 16, "name": "temperature", "byte": 0, "len": 1, "type": "u8" },
          { "frame_id": 16, "name": "humidity", "byte": 1, "len": 1, "type": "u8" },
          { "frame_id": 17, "name": "seat.heater_on", "byte": 0, "len": 1, "type": "bool" }
        ]
      },
      "_disabled": false
    },
    {
      "type": "LoggingPlugin",
      "path": "plugins/LoggingPlugin/libLoggingPlugin.so",
      "config": {
        "log_file": "logs/sensor.log"
      },
      "_disabled": false
    },
    {
      "type": "MqttAdapterPlugin",
      "path": "plugins/MqttAdapterPlugin/libMqttAdapterPlugin.so",
      "config": {
            "broker": "ssl://localhost:8883",
            "topic": "lin/#",
            "qos": 1,
            "certificates": [
              {
                "type": "CA",
                "keyFile": "/etc/mosquitto/certs/ca.key",
                "certFile": "/etc/mosquitto/certs/ca.pem",
                "commonName": "MyCA",
                "bits": 4096,
                "days": 3650
              },
              {
                "type": "Server",
                "keyFile": "/etc/mosquitto/certs/server.key",
                "certFile": "/etc/mosquitto/certs/server.crt",
                "commonName": "localhost",
                "bits": 4096,
                "days": 3650,
                "san": ["DNS:localhost", "IP:127.0.0.1"]
              },
              {
                "type": "Client",
                "keyFile": "/etc/mosquitto/certs/client.key",
                "certFile": "/etc/mosquitto/certs/client.crt",
                "commonName": "myuser",
                "bits": 4096,
                "days": 3650,
                "san": ["DNS:client", "IP:127.0.0.1"]
              }
            ]
      },
       "_disabled": false
    },
    {
      "type": "HTTPAdapter",
      "path": "plugins/HTTPAdapter/libHTTPAdapter.so",
      "endpoint": "http://localhost:8080/data",
      "_disabled": true
    }
  ]
}
